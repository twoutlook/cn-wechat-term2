<view class='m3-card'>
  <view class="m3-image-box">
    <image class="m3-image" src="{{movie.image ==''?defaultImg:movie.image}}" mode='widthFix' binderror='whenNoImg'>
    </image>
  </view>

  <view class="m3-text-box">
    <view class="m3-text">


      <view class="m3-title">
        {{movie.title}}
      </view>
      <view class="m3-title">
        {{movie.comment}}
      </view>




    </view>
  </view>




</view>
<view class='buttom-section'>
  <view class='btn' bindtap='onTapGotoM6'>重新編輯</view>
  <view class='btn' bindtap='onTapPublish'>發佈影評</view>
</view>